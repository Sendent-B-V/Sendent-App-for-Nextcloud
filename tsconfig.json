{
    "compilerOptions": {
      "lib": ["dom", "es2021"],
      "module": "ES6",
      "moduleResolution": "node",
      "target": "ES6",
      "strict": true,
      "sourceMap": true,
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["@types/sortablejs"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
